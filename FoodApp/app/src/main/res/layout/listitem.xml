<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="100">


    <RelativeLayout
        android:layout_width="380dp"
        android:layout_height="180dp"
        android:layout_marginTop="30dp"
        android:layout_marginHorizontal="20dp">


        <ImageButton
            android:id="@+id/imageButton1"
            android:layout_width="150dp"
            android:layout_height="161dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="14dp">

        </ImageButton>

        <TextView
            android:id="@+id/listPriceText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageButton1"
            android:layout_alignStart="@+id/imageButton1"
            android:layout_alignParentBottom="true"

            android:text="Price:" />

        <TextView
            android:id="@+id/listQuantityText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageButton1"
            android:layout_alignEnd="@+id/imageButton1"
            android:text="Qty:" />

        <ImageButton
            android:id="@+id/imageButton2"
            android:layout_width="150dp"
            android:layout_height="161dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="17dp"/>

        <TextView
            android:id="@+id/listPriceText2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageButton2"
            android:layout_alignStart="@+id/imageButton2"
            android:layout_alignParentBottom="true"


            android:text="Price:" />

        <TextView
            android:id="@+id/listQuantityText2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageButton2"

            android:layout_alignEnd="@+id/imageButton2"
            android:text="Qty:" />
    </RelativeLayout>


</LinearLayout>
